{
  "name": "high_performance",
  "version": "1.1.0",
  "description": "Performance-optimized LTMC configuration template for high-throughput environments",
  "extends": "default_project",
  "metadata": {
    "author": "LTMC Performance Team",
    "created": "2025-08-10",
    "category": "performance",
    "compatibility": ["ltmc>=2.0.0"],
    "recommended_hardware": {
      "min_ram_gb": 16,
      "min_cpu_cores": 8,
      "gpu_memory_gb": 8
    }
  },
  "environment": {
    "CACHE_SIZE": "${CACHE_SIZE:10000}",
    "WORKER_THREADS": "${WORKER_THREADS:16}",
    "REDIS_PORT": "${REDIS_PORT:6379}",
    "ORCHESTRATION_MODE": "${ORCHESTRATION_MODE:performance}",
    "ML_BATCH_SIZE": "${ML_BATCH_SIZE:128}",
    "EMBEDDING_BATCH_SIZE": "${EMBEDDING_BATCH_SIZE:128}",
    "MAX_CONCURRENT_REQUESTS": "${MAX_CONCURRENT_REQUESTS:500}",
    "PERFORMANCE_MODE": "${PERFORMANCE_MODE:optimized}"
  },
  "configuration": {
    "database": {
      "connection_timeout": 10,
      "max_connections": 50,
      "connection_pool_enabled": true,
      "prepared_statement_cache": true,
      "batch_insert_size": 1000,
      "write_ahead_logging": true,
      "checkpoint_interval": 10000
    },
    "vector_store": {
      "index_type": "IVF_HNSW",
      "ef_construction": 400,
      "ef_search": 200,
      "max_connections": 32,
      "dimension": 768,
      "nlist": 1024,
      "parallel_indexing": true,
      "memory_mapped": true
    },
    "redis": {
      "connection_pool_size": 50,
      "socket_timeout": 2,
      "connection_timeout": 2,
      "retry_on_timeout": true,
      "max_retry_attempts": 5,
      "cluster_mode": true,
      "pipeline_enabled": true,
      "compression": "lz4",
      "max_memory_usage": "2gb",
      "eviction_policy": "allkeys-lru"
    },
    "performance": {
      "cache_size": 10000,
      "chunk_buffer_size": 1000,
      "embedding_batch_size": 128,
      "context_window_size": 8192,
      "max_concurrent_requests": 500,
      "async_processing": true,
      "worker_pool_size": 16,
      "cpu_affinity_enabled": true,
      "memory_preallocation": true,
      "jit_compilation": true
    },
    "security": {
      "enable_project_isolation": true,
      "path_validation_enabled": true,
      "input_sanitization": true,
      "max_file_size_mb": 500,
      "allowed_file_extensions": [".txt", ".md", ".json", ".py", ".js", ".ts", ".cpp", ".h"],
      "security_audit_enabled": true,
      "rate_limiting_enabled": true,
      "max_requests_per_minute": 1000
    },
    "logging": {
      "level": "WARNING",
      "format": "%(asctime)s - %(levelname)s - %(message)s",
      "file_logging": true,
      "max_log_file_size_mb": 50,
      "backup_count": 10,
      "log_rotation": "size",
      "async_logging": true,
      "performance_profiling": true
    },
    "ml": {
      "model_cache_size": 20,
      "learning_rate": 0.01,
      "batch_size": 128,
      "enable_continuous_learning": true,
      "performance_monitoring": true,
      "gpu_acceleration": true,
      "mixed_precision": true,
      "model_parallelism": true,
      "gradient_accumulation_steps": 4
    },
    "orchestration": {
      "max_task_duration_seconds": 600,
      "heartbeat_interval_seconds": 10,
      "worker_timeout_seconds": 30,
      "enable_task_queuing": true,
      "max_queue_size": 10000,
      "priority_scheduling": true,
      "load_balancing": "round_robin",
      "auto_scaling_enabled": true,
      "max_workers": 32
    },
    "networking": {
      "keep_alive": true,
      "tcp_no_delay": true,
      "connection_reuse": true,
      "request_compression": true,
      "response_compression": true,
      "http2_enabled": true
    },
    "memory": {
      "heap_size_mb": 4096,
      "gc_optimization": "throughput",
      "memory_profiling": true,
      "leak_detection": false,
      "shared_memory_enabled": true
    }
  },
  "validation_schema": {
    "type": "object",
    "properties": {
      "database": {
        "type": "object",
        "properties": {
          "connection_timeout": {"type": "integer", "minimum": 1, "maximum": 60},
          "max_connections": {"type": "integer", "minimum": 10, "maximum": 200},
          "batch_insert_size": {"type": "integer", "minimum": 100, "maximum": 10000}
        }
      },
      "redis": {
        "type": "object",
        "properties": {
          "connection_pool_size": {"type": "integer", "minimum": 10, "maximum": 200},
          "cluster_mode": {"type": "boolean"}
        }
      },
      "performance": {
        "type": "object",
        "properties": {
          "cache_size": {"type": "integer", "minimum": 1000, "maximum": 100000},
          "max_concurrent_requests": {"type": "integer", "minimum": 100, "maximum": 10000},
          "worker_pool_size": {"type": "integer", "minimum": 4, "maximum": 64}
        }
      },
      "networking": {
        "type": "object",
        "properties": {
          "keep_alive": {"type": "boolean"},
          "http2_enabled": {"type": "boolean"}
        }
      },
      "memory": {
        "type": "object",
        "properties": {
          "heap_size_mb": {"type": "integer", "minimum": 1024, "maximum": 32768},
          "gc_optimization": {"type": "string", "enum": ["throughput", "latency", "balanced"]}
        }
      }
    },
    "required": ["database", "redis", "performance", "memory"]
  },
  "features": {
    "hot_reload": true,
    "template_inheritance": true,
    "environment_substitution": true,
    "schema_validation": true,
    "security_integration": true,
    "performance_monitoring": true,
    "gpu_acceleration": true,
    "auto_scaling": true,
    "load_balancing": true,
    "advanced_caching": true
  },
  "performance_targets": {
    "configuration_loading_ms": 1,
    "template_validation_ms": 3,
    "hot_reload_detection_ms": 50,
    "throughput_requests_per_second": 1000,
    "memory_usage_mb": 2048,
    "cpu_utilization_percent": 80
  }
}